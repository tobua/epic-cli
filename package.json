{
  "name": "epic-cli",
  "version": "1.3.1",
  "repository": "github:tobua/epic-cli",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "postinstall": "node ./installation.js"
  },
  "padua": {
    "source": true
  },
  "dependencies": {
    "latest-version": "^5.1.0",
    "npm-check-updates": "^11.1.9",
    "pakag": "^2.3.0",
    "rimraf": "^3.0.2",
    "skip-local-postinstall": "^1.0.5"
  },
  "type": "module",
  "main": "index.js",
  "bin": {
    "format": "cli/format.js",
    "global": "cli/global.js",
    "refresh": "cli/refresh.js",
    "update": "cli/update.js",
    "version": "cli/version.js"
  },
  "files": [
    "cli",
    "*.js"
  ],
  "devDependencies": {
    "padua": "^0.2.5"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    }
  },
  "engines": {
    "node": ">= 14"
  }
}
