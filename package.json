{
  "name": "epic-cli",
  "description": "Commands useful for everyday web development with node.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-cli",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "postinstall": "node ./installation.js"
  },
  "padua": {
    "source": true
  },
  "dependencies": {
    "@npmcli/map-workspaces": "^3.0.3",
    "latest-version": "^7.0.0",
    "npm-check-updates": "^16.10.8",
    "pakag": "^2.8.0",
    "skip-local-postinstall": "^2.0.4",
    "tree-node-cli": "^1.6.0",
    "validate-npm-package-name": "^5.0.0"
  },
  "type": "module",
  "bin": {
    "files": "cli/files.js",
    "format": "cli/format.js",
    "global": "cli/global.js",
    "init": "cli/init.js",
    "refresh": "cli/refresh.js",
    "update": "cli/update.js",
    "version": "cli/version.js",
    "workspaces": "cli/workspaces.js"
  },
  "files": [
    "cli",
    "*.js"
  ],
  "keywords": [
    "cli",
    "everyday",
    "node"
  ],
  "devDependencies": {
    "padua": "^1.2.2"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    }
  },
  "engines": {
    "node": ">= 16"
  }
}
